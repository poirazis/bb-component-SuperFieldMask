          {
            "label": "Left",
            "value": "flex-start",
            "barIcon": "TextAlignLeft",
            "barTitle": "Align left"
          },
          {
            "label": "Center",
            "value": "center",
            "barIcon": "TextAlignCenter",
            "barTitle": "Align center"
          },
          {
            "label": "Right",
            "value": "flex-end",
            "barIcon": "TextAlignRight",
            "barTitle": "Align right"
          }
        ]
      },
      {
        "type": "boolean",
        "label": "Grab Focus",
        "key": "autofocus",
        "defaultValue": false
      },
      {
        "type": "boolean",
        "label": "Suggestions",
        "key": "showSuggestions",
        "hidden": true,
        "defaultValue": false
      },
      {
        "type": "boolean",
        "label": "Disabled",
        "key": "disabled",
        "defaultValue": false
      },
      {
        "type": "boolean",
        "label": "Read only",
        "key": "readonly",
        "defaultValue": false,
        "dependsOn": {
          "setting": "disabled",
          "value": true,
          "invert": true
        }
      },
      {
        "type": "boolean",
        "key": "invisible",
        "label": "Invisible",
        "defaultValue": false
      },
      {
        "type": "icon",
        "key": "icon",
        "label": "Inline Icon"
      },
      {
        "type": "buttonConfiguration",
        "key": "buttons",
        "nested": true,
        "wide": true
      },
      {
        "tag": "style",
        "type": "select",
        "key": "role",

      {
        "type": "static",
        "values": [
          {
            "key": "value",
            "label": "Value",
            "type": "string"
          }
        ]
      }
    ],
    "settings": [
      {
        "type": "boolean",
        "key": "inFieldGroup",
        "label": "In Field Group",
        "defaultValue": true,
        "hidden": true
      },
      {
        "type": "field/string",
        "label": "Field",
        "key": "field",
        "defaultValue": "Masked Text Field"
      },
      {
        "type": "text",
        "label": "Label",
        "key": "label",
        "placeholder": "Field Name",
        "resetOn": "field"
      },
      {
        "type": "text",
        "label": "Placeholder",
        "key": "placeholder",
        "placeholder": "Field Name",
        "resetOn": "field"
      },
      {
        "type": "text",
        "label": "Default value",
        "key": "defaultValue",
        "supportsConditions": false,
        "resetOn": "field"

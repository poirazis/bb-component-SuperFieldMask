      {
        "tag": "style",
        "type": "select",
        "label": "Label Position",
        "key": "labelPosition",
        "showInBar": true,
        "barStyle": "buttons",
        "defaultValue": "fieldGroup",
        "options": [
          {
            "label": "Disabled",
            "value": false,
            "barIcon": "Cancel",
            "barTitle": "Disabled"
          },
          {
            "label": "Auto",
            "value": "fieldGroup",
            "barIcon": "Group",
            "barTitle": "Field Group"
          },
          {
            "label": "Above",
            "value": "above",
            "barIcon": "MarginTop",
            "barTitle": "Above"
          },
          {
            "label": "Left",
            "value": "left",
            "barIcon": "MarginLeft",
            "barTitle": "Left"
          }
        ]
      },
      {
        "tag": "style",
        "type": "number",
        "label": "Size",
        "key": "span",
        "defaultValue": 6,
        "min": 2
      }
    ]
  }
}
